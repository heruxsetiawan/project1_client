<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:layout_marginBottom="5dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_submenu_keranjang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:textColor="#000"
                android:text="Example application"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/harga_total"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_submenu_keranjang"
                android:gravity="top"
                android:visibility="gone"
                android:text="9999"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fkitchen_id"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="12345"
                android:visibility="gone"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_submenu_keranjang"
                android:layout_toLeftOf="@+id/relativeLayout2"
                android:layout_alignLeft="@+id/harga_total"
                android:layout_alignStart="@+id/harga_total" />



            <TextView
                android:id="@+id/tv_harga_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvrp"
                android:textColor="@color/colorPrimary"
                android:text="123"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_below="@+id/tv_submenu_keranjang"
                />

            <TextView
                android:id="@+id/tvrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/tv_submenu_keranjang"
                android:text="Rp"
                android:textStyle="bold"
                android:textSize="13sp"
              />
            <TextView
                android:id="@+id/tv_qty_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_toRightOf="@+id/tv_submenu_keranjang"
                android:hint="0"
                android:textSize="30dp"

                />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

            >



                <RelativeLayout
                    android:id="@+id/btn_plus_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gb_selector_tambah"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                 >

                    <Button
                        android:clickable="false"
                        android:layout_width="17dp"
                        android:layout_height="20dp"
                        android:background="@drawable/selector"


                      />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_minus_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gb_selector_1"
                    android:layout_toLeftOf="@+id/btn_plus_keranjang"
                    android:padding="5dp"
                    android:layout_marginRight="10dp">


                    <Button
                        android:clickable="false"
                        android:layout_width="17dp"
                        android:layout_height="20dp"

                        android:background="@drawable/selector2" />

                </RelativeLayout>


            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_harga_keranjang"
                android:layout_marginTop="5dp"

                android:background="#000" />
            <EditText
                android:id="@+id/add_note"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Note"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:textSize="15dp"

                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
