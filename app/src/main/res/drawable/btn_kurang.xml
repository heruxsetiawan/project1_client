<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPrimaryDark" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ff9c00" />
            <stroke
                android:width="1dp"
                android:color="#ff9c00" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>